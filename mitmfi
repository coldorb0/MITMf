# Install required packages
apt-get install python2-dev python-setuptools libpcap0.8-dev libnetfilter-queue-dev libssl-dev libjpeg-dev libxml2-dev libxslt1-dev libcapstone4 libcapstone-dev -y
curl https://bootstrap.pypa.io/pip/2.7/get-pip.py -o get-pip.py
python2 get-pip.py
pip install virtualenvwrapper
export VIRTUALENVWRAPPER_PYTHON=/usr/bin/python2
source 'which virtualenvwrapper.sh'

# Create a virtual environment and install MITMf
cd ..
rm -rf MITMf
git clone https://github.com/byt3bl33d3r/MITMf
cd MITMf
git submodule init
git submodule update --recursive
pip install pyinotify python-magic capstone Inject chardet bs4 Pillow pefile cryptography pypcap scapy ipy configobj netaddr pyopenssl Flask dnslib pycrypto dnspython user_agents service_identity lxml pyasn1 requests msgpack-python twisted

# Run MITMf
python2 mitmf.py
